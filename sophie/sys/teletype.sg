# This is meant to be just enough to get a simple text game going.
# This allows to construct simple keyboard-and-screen interactive programs.
# The module installs a driver that interprets `action` subtypes sensibly.

import:
    foreign "sophie.adapters.teletype_adapter"(nil);

type:
    action is case:
        done;
        echo (text:list[string], next:action);
        read (next: (string)->action);
        random (next: (number)->action);
    esac;


